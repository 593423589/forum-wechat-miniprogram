/* miniprogram/pages/posts/post-url/B/B.wxss */
@import "../../posts/post-item/post-item-template.wxss";

swiper {
  width: 100%;
  height: 400rpx;
}

/*less sass*/

swiper image {
  width: 100%;
  height: 400rpx;
}

/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 280rpx;
}

.userinfo-avatar {
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #777;
  font-size: 15px;
}

.usermotto {
  margin-top: 50px;
  color: #777;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.delete {
  margin-bottom: 10rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border: solid 1px rgb(214, 36, 36);
  color: rgb(214, 36, 36);
}

#delete_comment {
  border: solid 1px rgb(60, 110, 169);
  color: rgb(60, 110, 169);
}

#delete_collect {
  border: solid 1px rgb(72, 170, 18);
  color: rgb(72, 170, 18);
}

#my_input {
  position: fixed;
  bottom: 0rpx;
  background-color: rgb(237, 236, 232);
  color: rgb(128, 128, 128);
  height: 80rpx;
  width: 100%;
  z-index: 100;
}

#mask {
  position: fixed;
  top: 0rpx;
  /* background-color: #000b; */
  background-color: rgba(0, 0, 0, 0.8);
  width: 100%;
  height: 100%;
  z-index: 10;
}

#mask-view {
  position: absolute;
}

#login_input {
  border: solid #000 1px;
  margin-bottom: 50rpx;
  height: 35rpx;
}

#login_button {
  background-color: rgb(124, 180, 87);
  line-height: 60rpx;
  height: 60rpx;
  width: 30%;
  font-size: 30rpx;
}

.login {
  position: absolute;
  text-align: center;
  left: 150rpx;
  top: 350rpx;
  height: 100rpx;
  width: 60%;
  font-size: 25rpx;
}
